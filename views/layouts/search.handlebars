    <!-- Page Content -->
    <div class="container" style="background: white;">

        <div class="row">

            <div class="col-md-3">
                <div class="funkyradio">
                    <p class="lead">Show results for</p>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="aptRadio1" />
                        <label for="aptRadio1">&nbsp;</label>
                    </div>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="aptRadio2" />
                        <label for="aptRadio2">&nbsp;</label>
                    </div>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="aptRadio3" />
                        <label for="aptRadio3">&nbsp;</label>
                    </div><br>

                    <p class="lead">Refined by</p>
                    <p>Delivery Day</p>
                    <div class="funkyradio-info">
                        <input type="checkbox" name="checkbox" id="defineCheckbox1" />
                        <label for="defineCheckbox1">Get it by tommorow</label>
                    </div><br>

                    {{!--<p>Brand</p>
                    {{#each brand}}
                    <div class="funkyradio-info">
                        <input type="checkbox" name="checkbox" id="{{brandID}}" />
                        <label for="{{brandID}}">&nbsp;{{brandName}}</label>
                    </div>
                    {{/each}}--}}
                    <p>Condition</p>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="conRadio1" />
                        <label for="conRadio1">New</label>
                    </div>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="conRadio2" />
                        <label for="conRadio2">Refurbished</label>
                    </div>
                    <div class="funkyradio-info">
                        <input type="radio" name="checkbox" id="conRadio3" />
                        <label for="conRadio3">Used</label>
                    </div>
                </div>
            </div>

            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row">
                    {{!--<ul>
                        {{#each result}}
                        <li>
                        </li>
                        {{/each}}
                    </ul>--}}
                    {{#each result}}
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="http://placehold.it/320x150" alt="">
                            <div class="caption">
                                <h4 class="pull-right">$ {{this.price}}</h4>
                                <h4><a href="/goods/{{this._id}}">{{this.goods}}</a>
                                </h4>
                            </div>
                            <div class="ratings">
                                <p class="pull-right">15 reviews</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>
